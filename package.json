{
  "name": "document-management-service",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "nodemon --watch src -e .ts,.json,.tsx --exec \"tsc && node dist/index.js\"",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "20.14.9",
    "nodemon": "3.1.4",
    "ts-node": "10.9.2",
    "typescript": "5.5.3",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "8.0.0",
    "lint-staged": "15.2.0"
  },
  "dependencies": {
    "@types/joi": "17.2.3",
    "express": "4.19.2",
    "joi": "17.13.3",
    "prettier": "3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts, tsx, js, jsx}": [
      "git add"
    ],
    "src/**/*.{ts, tsx, js, jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
